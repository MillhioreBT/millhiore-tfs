---
import "@fontsource/share-tech-mono"
import { ViewTransitions } from "astro:transitions"

import Footer from "@@/containers/tfs/Footer.astro"
import Header from "@@/containers/tfs/Header.astro"

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--color-text: #cdcdc1;
		--color-text-light: #fffffe;
		--color-background: #1d1d1e;
		--color-accent: #6798a0;
		--color-secondary: #3e3e40;
		--color-warning: #faa0a0;

		--header-height: 64px;
		--font-default: "Share Tech Mono", monospace;

		::-webkit-scrollbar {
			width: 10px;
		}

		::-webkit-scrollbar-track {
			background: var(--color-secondary);
		}

		::-webkit-scrollbar-thumb {
			background: var(--color-accent);
			border: 2px solid var(--color-secondary);
			border-radius: 0.5rem;
		}

		::-webkit-scrollbar-track:vertical:increment {
			background-color: red;
			color: red;
		}

		scrollbar-gutter: stable;
	}

	* {
		box-sizing: border-box;
		position: relative;
		padding: 0;
		margin: 0;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		text-wrap: balance;
	}

	p {
		text-wrap: pretty;
	}

	html {
		font-family: var(--font-default);
		color: var(--color-text);
		background: var(--color-background);
		-webkit-font-smoothing: antialiased;
	}

	.AIAnchor {
		color: var(--color-accent);
		text-decoration: none;
	}
</style>

<style>
	body {
		display: grid;
		grid-template-areas: "main" "footer";
		grid-template-rows: auto auto;
		min-height: 100dvh;
		min-width: 100%;
		padding-top: var(--header-height);
		z-index: 1;
	}

	main {
		grid-area: main;
		display: flex;
		flex-direction: column;
		place-items: center;
		gap: 2rem;
		margin: 2rem;
		margin-top: 5rem;
	}
</style>
