---
import { getScripts } from "&/code"
import ScriptCard from "@@/containers/scripts/Card.astro"

const scripts = await getScripts()
---

<ul>
	{scripts.map((script) => <ScriptCard script={script} />)}
</ul>

<style>
	ul {
		display: flex;
		flex-direction: column;
		list-style: none;
		gap: 0.5rem;
	}
</style>
